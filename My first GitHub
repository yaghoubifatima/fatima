       (4, 'Milad', 'milad@gmail.com', '077 301 59 11', 'Lankaran, Azerbaijan', '2025-06-15');

select * from customers;

drop table customers;
truncate table customers;


CREATE TABLE employees (
    employee_id INT PRIMARY KEY,
    name VARCHAR(50),
    position VARCHAR(50),
    hire_date DATE,
    salary DECIMAL(10, 2)
);

INSERT INTO employees (employee_id, name, position, hire_date, salary)  
