USE System;

CREATE TABLE customers (
    customer_id INT PRIMARY KEY,
    name VARCHAR(50),
    email VARCHAR(50),
    phone VARCHAR(25),
    address VARCHAR(100),
    registration_date DATE 
);

INSERT INTO customers (customer_id, name, email, phone, address, registration_date)
